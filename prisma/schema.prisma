generator client {
  provider = "prisma-client-js"
}

 datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id          String   @id @default(cuid())
  name        String   @unique
  location    String
  address     String?
  phone       String?
  email       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  loans Loan[]
}

model Member {
  id                 String   @id @default(cuid())
  cardToken          String   @unique
  shopifyCustomerId  String?  @unique
  tier               String
  status             String
  cycleStart         DateTime
  cycleEnd           DateTime
  itemsUsed          Int      @default(0)
  swapsUsed          Int      @default(0)
  itemsOut           Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  loans       Loan[]
  auditEvents AuditEvent[]
}

model Loan {
  id            String    @id @default(cuid())
  member        Member    @relation(fields: [memberId], references: [id])
  memberId      String
  store         Store     @relation(fields: [storeId], references: [id])
  storeId       String
  photoUrl      String
  thumbnailUrl  String
  checkoutAt    DateTime  @default(now())
  dueDate       DateTime  // 30 days from checkout
  returnedAt    DateTime?
  createdAt     DateTime  @default(now())

  loanPhotos LoanPhoto[]

  @@index([memberId, returnedAt])
}

model LoanPhoto {
  id       String   @id @default(cuid())
  r2Key    String
  metadata String
  loanId   String?
  loan     Loan?    @relation(fields: [loanId], references: [id])
  createdAt DateTime @default(now())
}

model AuditEvent {
  id        String   @id @default(cuid())
  member    Member   @relation(fields: [memberId], references: [id])
  memberId  String
  action    String
  metadata  String   @default("{}")
  createdAt DateTime @default(now())
}
